<%= form_with(model: quarto) do |form| %>
  <div class='errors'>
    <% if quarto.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(quarto.errors.count, "error") %> prohibited this quarto from being saved (hover to see)</h2>

        <ul>
          <% quarto.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class='form-div'>
    <div class='labels'>
      <%= form.label :numero, style: "display: block" %>
      <%= form.number_field :numero %>
    </div>

    <div class='labels'>
      <%= form.label :tipo, style: "display: block" %>
      <%= form.text_field :tipo %>
    </div>

    <div class='labels'>
      <%= form.label :disponibilidade, style: "display: block" %>
      <%= form.check_box :disponibilidade %>
    </div>

    <div class='labels'>
      <%= form.label :preco_diaria, style: "display: block" %>
      <%= form.text_field :preco_diaria %>
    </div>

    <div class='labels'>
      <%= form.label :descricao, style: "display: block" %>
      <%= form.text_area :descricao %>
    </div>

    <div class='submit'>
      <%= form.submit %>
    </div>
  </div>
<% end %>
