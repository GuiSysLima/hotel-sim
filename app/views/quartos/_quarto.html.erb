<div id="<%= dom_id quarto %>" class='showing'>
  <p class='show-item'>
    <strong>Numero:</strong>
    <%= quarto.numero %>
  </p>

  <p class='show-item'>
    <strong>Tipo:</strong>
    <%= quarto.tipo %>
  </p>

  <p class='show-item'>
    <strong>Disponibilidade:</strong>
    <%= quarto.disponibilidade ? "Disponível" : "Indisponível" %>
  </p>

  <p class='show-item'>
    <strong>Preco diaria:</strong>
    <%= quarto.preco_diaria %>
  </p>

  <p class='show-item'>
    <strong>Descricao:</strong>
    <%= quarto.descricao %>
  </p>

</div>
