<%= form_with(model: cliente) do |form| %>
  <div class='errors'>
    <% if cliente.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(cliente.errors.count, "erro") %> impedem este cliente de ser criado (passe o mouse por cima
          para ver mais detalhes)</h2>

        <ul>
          <% cliente.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div>
    <div>
      <%= form.label :cpf, style: "display: block" %>
      <%= form.text_field :cpf %>
    </div>

    <div>
      <%= form.label :nome, style: "display: block" %>
      <%= form.text_field :nome %>
    </div>

    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label :telefone, style: "display: block" %>
      <%= form.text_field :telefone %>
    </div>

    <div>
      <% if cliente.persisted? %>
        <%= form.submit "Atualizar Cliente" %>
      <% else %>
        <%= form.submit "Cadastrar Cliente" %>
      <% end %>
    </div>
  </div>

<% end %>
